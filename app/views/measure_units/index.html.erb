<h1>Unidades de medida</h1>
<%= link_to 'Crear unida de medida', new_measure_unit_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-stripped table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Abreviatura</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @measure_units.each do |measure_unit| %>
        <tr>
          <td><%= measure_unit.name %></td>
          <td><%= measure_unit.abbreviation %></td>
          <td><%= link_to 'Editar', edit_measure_unit_path(measure_unit) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>