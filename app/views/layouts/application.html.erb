<!DOCTYPE html>
<html>
  <head>

    <title>DOMUS SRL</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-129692558-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-129692558-1');

      document.addEventListener('turbolinks:load', event => {
        if (typeof gtag === 'function') {
          gtag('config', 'UA-129692558-1', {
            'page_location': event.data.url
          });
        }
      });
    </script> 
  </head>

  <body>

      <%= render 'shared/header', contact_information: Contact.first, extras: Extra.first %>

      <section>
        <div class="container">
          <div class="row">
            <%= render 'shared/left_menu', categories: Category.all, manufacturers: Manufacturer.all, extras: Extra.first %>
    	       
            <div class="col-sm-9 padding-right">
    	        <%= yield %>
            </div>

          </div>
        </div>
      </section>

    	
      <%= render 'shared/footer', contact_information: Contact.first %>

  </body>
</html>
