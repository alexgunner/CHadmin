<center>
	<h2 class="title"><%= @category.name %></h2>
</center>
<p class="justified-text">
	<%= @category.description %>
</p>

<% @category.subcategories.each do |subcategory| %>
	<h4 class="title"><%= subcategory.name %></h4>
	<p class="justified-text">
		<%= subcategory.description %>
	</p>
	<% subcategory.products.each do |product| %>
		<div class="col-sm-4">
			<div class="product-image-wrapper">
				<div class="single-products">
					<div class="productinfo text-center">
						<%= image_tag product.picture.url(:original), class: "img-responsive" %>
						<h4><%= product.name %></h4>
						<p class="justified-text"><%= product.description.truncate(40) %></p>
						<a href="#" class="btn btn-default add-to-cart" data-toggle="modal" data-target="#product<%= product.id %>"><i class="fa fa-eye"></i>Ver m치s</a>

						<!-- Modal -->
						<div class="modal fade" id="product<%= product.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
						  <div class="modal-dialog" role="document">
						    <div class="modal-content">
						      <div class="modal-header">
						        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						        <h2 class="modal-title" id="myModalLabel"><%= product.name %></h2>
						      </div>
						      <div class="modal-body">
						        <div class="row">
						        	<div class="col-lg-4">
						        		<%= image_tag product.picture.url(:original), class: "img-responsive" %>
						        	</div>
						        	<div class="col-lg-8">
						        		<p class="justified-text">
						        			<%= product.description %>
						        		</p>
						        	</div>
						        </div>
						        <% if product.product_variants.count != 0 %>
							        <div class="row">
							        	<div class="col-lg-12">
							        		<h4>Variantes</h4>
							        		<div class="table-responsive">
							        			<table class="table table-striped table-hover">
							        				<thead>
							        					<th>Descripci칩n</th>
							        					<th>C칩digo</th>
							        					<th>Tama침o</th>
							        					<th>Precio</th>
							        				</thead>
							        				<tbody>
							        					<% product.product_variants.each do |variant| %>
							        						<tr>
							        							<td align="justify">
							        								<%= variant.description %>
							        							</td>
							        							<td align="left">
							        								<%= variant.reference_code %>
							        							</td>
							        							<td align="left">
							        								<%= variant.variant_size %> <%= product.measure_unit.abbreviation %>
							        							</td>
							        							<td align="left">
							        								Bs. <%= variant.price %>
							        							</td>
							        						</tr>
							        					<% end %>
							        				</tbody>
							        			</table>
							        		</div>
							        	</div>
							        </div>
							    <% end %>
						      </div>
						      <div class="modal-footer">
						        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
						      </div>
						    </div>
						  </div>
						</div>

					</div>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
