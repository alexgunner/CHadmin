<%= form_tag("/create_user", method: "post") do %>
  <h3>Crea tu cuenta para próximamente acceder a nuestro carrito de compras</h3>

  <% if notice.present? %>
    <div class="alert alert-info">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
      <div id="notice"> <%= notice %> </div>
    </div>
  <% end %>

  <div class="form-group">
    <label>Nombres:</label>
    <%= text_field_tag :name, nil, placeholder: "Ingresa tus nombres", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Apellidos:</label>
    <%= text_field_tag :lastname, nil, placeholder: "Ingresa tus apellidos", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Correo electrónico:</label>
    <%= text_field_tag :email, nil, placeholder: "Ingresa tu correo electrónico", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Teléfono:</label>
    <%= text_field_tag :phone, nil, placeholder: "Ingresa tu teléfono", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Contraseña:</label>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>

  <%= hidden_field_tag :user_type, "1" %>

  <div class="form-group">
    <label>Confirma tu contraseña</label>
    <%= password_field_tag :password_confirmation, nil, class: "form-control" %>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-success">Crear cuenta</button>
  </div>
<% end %>
