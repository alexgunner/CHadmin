<div class="features_items"><!--features_items-->
	<h2 class="title text-center">Categor√≠as</h2>
	<% @categories.each do |category| %>
		<div class="col-sm-4">
			<div class="product-image-wrapper">
				<div class="single-products">
					<div class="productinfo text-center">
						<%= image_tag category.picture.url(:original), class: "img-responsive" %>
						<p><%= category.description.truncate(40) %></p>
						<h4><%= category.name %></h4>
					</div>
					<div class="product-overlay">
						<div class="overlay-content">
							<h2><%= category.name %></h2>
							<a href="/category_products/<%= category.id %>" class="btn btn-default add-to-cart"><i class="fa fa-eye"></i>Ver productos</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div><!--features_items-->