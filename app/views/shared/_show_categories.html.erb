<div class="features_items"><!--features_items-->
	<h2 class="title text-center"><%= title %></h2>
	<% categories.each do |category| %>
		<div class="col-sm-3">
			<div class="category-image-wrapper">
				<div class="single-products">
					<div class="productinfo text-center">
						<%= image_tag category.picture.url(:original), class: "img-responsive" %>
						<p><%= category.name %></p>
						<h4><a href="/category_products/<%= category.id %>" class="btn btn-default add-to-cart">Ver</a></h4>
					</div>
				</div>
			</div>
		</div>
	<% end %>
</div><!--features_items-->