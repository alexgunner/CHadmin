<%= form_with(model: product, local: true, html: { multipart: true }) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :reference_code %>
    <%= form.text_field :reference_code, id: :product_reference_code %>
  </div>

  <div class="field">
    <%= form.label :measure_unit_id %>
    <%= form.collection_select :measure_unit_id, MeasureUnit.all, :id, :name, id: :product_meausure_unit_id %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name, id: :product_category_id %>
  </div>

  <div class="field">
    <%= form.label :subcategory_id %>
    <%= form.collection_select :subcategory_id, Subcategory.all, :id, :name, id: :product_subcategory_id %>
  </div>

  <div class="field">
    <%= form.label :provider_id %>
    <%= form.collection_select :provider_id, Provider.all, :id, :name, id: :product_provider_id %>
  </div>

  <div class="field">
    <%= form.label :manufacturer_id %>
    <%= form.collection_select :manufacturer_id, Manufacturer.all, :id, :name, id: :product_manufacturer_id %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, id: :product_picture_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
