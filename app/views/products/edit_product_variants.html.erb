<h1>Editar variante de <%= @product_variant.product.name %> (<%= @product_variant.product.reference_code %>)</h1>
<%= form_tag("/update_product_variant", method: "patch") do %>
	
  <%= hidden_field_tag(:product_id, @product_variant.product_id) %>

  <%= hidden_field_tag(:variant_id, @product_variant.id) %>

  <div class="form-group">
  	<%= label_tag(:size, "TamaÃ±o (#{@product_variant.product.measure_unit.name})") %>
  	<%= text_field_tag :size, @product_variant.variant_size, class: "form-control" %>
  </div>

  <div class="form-group">
  	<%= label_tag(:price, "Precio") %>
  	<%= text_field_tag :price, @product_variant.price, class: "form-control" %>
