<h1>Medios de envío</h1>
<%= link_to 'Crear envío', new_bus_path, class: "btn btn-primary" %>
<div class="table-responsive">
  <table class="table table-hover table-stripped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @buses.each do |bus| %>
        <tr>
          <td><%= bus.name %></td>
          <td><%= link_to 'Editar', edit_bus_path(bus) %></td>
          <td><%= link_to 'Eliminar', bus, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
